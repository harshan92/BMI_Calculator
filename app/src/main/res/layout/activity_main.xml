<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main"
>
    <TextView
            android:text="My BMI Meter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="30sp" android:gravity="center"/>
    <TextView
            android:text="@string/height_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginBottom="-163dp"
            android:layout_alignBottom="@+id/textView3" android:textSize="24sp"/>
    <TextView
            android:text="@string/weight_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginBottom="-89dp"
            android:layout_alignBottom="@+id/textView3" android:textSize="24sp"/>
    <EditText
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/weight" android:layout_marginTop="55dp" android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp" android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4" android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp" android:importantForAutofill="no"/>
    <EditText
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/height" android:layout_marginTop="130dp" android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4" android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp" android:importantForAutofill="no"/>
    <Button
            android:text="@string/check"
            android:layout_width="match_parent"
            android:layout_height="66dp" android:id="@+id/check_btn" android:layout_marginTop="228dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:background="@color/colorAccent" android:textColor="@android:color/background_light"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="40dp"
            android:layout_below="@+id/check_btn" android:textSize="30sp"/>
    <TextView
            android:text="@string/please_tap_check_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/result_text" android:layout_marginTop="24dp"
            android:layout_below="@+id/textView" android:textSize="24sp" android:gravity="center"/>
</android.widget.RelativeLayout>